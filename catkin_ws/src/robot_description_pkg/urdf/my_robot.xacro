<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="FourWheeledRobot">

    <xacro:include filename="$(find robot_description_pkg)/urdf/material.xacro" />
    <xacro:include filename="$(find robot_description_pkg)/urdf/gazebo_plugins.gazebo" />

    <!-- This is the footprint -->
    <link name="robot_footprint"></link>

    <joint name="robot_footprint_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="robot_footprint" />
        <child link="chassis_link" />
    </joint>

    <!-- This is the chassis -->
    <link name="chassis_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="1.0" />
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
        </inertial>
        <visual name="chassis_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="1 0.6 0.3" />
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1" />
                <texture filename="" />
            </material>
        </visual>
        <collision name="chassis_collision">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="1 0.6 0.3" />
            </geometry>
        </collision>
    </link>
    <!-- Back right wheel -->
    <joint name="wheel1_joint" type="continuous">
        <origin xyz="-0.3 -0.35 -0.1" rpy="0.0 0.0 0.0" />
        <parent link="chassis_link" />
        <child link="wheel1_link" />
        <axis xyz="0.0 1.0 0.0" />
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0" />
    </joint>
    <link name="wheel1_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.5" />
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
        </inertial>
        <visual name="wheel1_visual">
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0" />
            <geometry>
                <cylinder length="0.1" radius="0.15" />
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 1" />
                <texture filename="" />
            </material>
        </visual>
        <collision name="wheel1_collision">
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0" />
            <geometry>
                <cylinder length="0.1" radius="0.15" />
            </geometry>
        </collision>
    </link>
    <!-- Back left wheel -->
    <joint name="wheel2_joint" type="continuous">
        <origin xyz="-0.3 0.35 -0.1" rpy="0.0 0.0 0.0" />
        <parent link="chassis_link" />
        <child link="wheel2_link" />
        <axis xyz="0.0 1.0 0.0" />
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0" />
    </joint>
    <link name="wheel2_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.5" />
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
        </inertial>
        <visual name="wheel2_visual">
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0" />
            <geometry>
                <cylinder length="0.1" radius="0.15" />
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 1" />
                <texture filename="" />
            </material>
        </visual>
        <collision name="wheel2_collision">
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0" />
            <geometry>
                <cylinder length="0.1" radius="0.15" />
            </geometry>
        </collision>
    </link>
    <!-- front right wheel -->
    <joint name="wheel3_joint" type="continuous">
        <origin xyz="0.3 -0.35 -0.1" rpy="0.0 0.0 0.0" />
        <parent link="chassis_link" />
        <child link="wheel3_link" />
        <axis xyz="0.0 1.0 0.0" />
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0" />
    </joint>
    <link name="wheel3_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.5" />
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
        </inertial>
        <visual name="wheel3_visual">
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0" />
            <geometry>
                <cylinder length="0.1" radius="0.15" />
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 1" />
                <texture filename="" />
            </material>
        </visual>
        <collision name="wheel3_collision">
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0" />
            <geometry>
                <cylinder length="0.1" radius="0.15" />
            </geometry>
        </collision>
    </link>

    <!-- front left wheel -->
    <joint name="wheel4_joint" type="continuous">
        <origin xyz="0.3 0.35 -0.1" rpy="0.0 0.0 0.0" />
        <parent link="chassis_link" />
        <child link="wheel4_link" />
        <axis xyz="0.0 1.0 0.0" />
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0" />
    </joint>
    <link name="wheel4_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.5" />
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
        </inertial>
        <visual name="wheel4_visual">
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0" />
            <geometry>
                <cylinder length="0.1" radius="0.15" />
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 1" />
                <texture filename="" />
            </material>
        </visual>
        <collision name="wheel4_collision">
            <origin xyz="0.0 0.0 0.0" rpy="1.570795 0.0 0.0" />
            <geometry>
                <cylinder length="0.1" radius="0.15" />
            </geometry>
        </collision>
    </link>
    <!-- Camera -->
    <joint name="camera_joint" type="fixed">
        <origin xyz="0.501 0 0" rpy="0.0 0.0 0.0" />
        <parent link="chassis_link" />
        <child link="camera_link" />
        <axis xyz="0.0 0.0 0.0" />
    </joint>
    <link name="camera_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.01" />
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <geometry>
                <box size="0.050 0.20 0.07" />
            </geometry>
            <material name="Blue" />
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <geometry>
                <box size="0.050 0.20 0.07" />
            </geometry>
        </collision>
    </link>


    <!-- LIDAR-->
    <link name="lider_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.10" />
            <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6" />
        </inertial>
        <visual>
            <origin xyz=" 0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://robot_description_pkg/meshes/rplidar.dae" />
            </geometry>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <mesh filename="package://robot_description_pkg/meshes/rplidar.dae" />
            </geometry>
        </collision>
    </link>

    <joint name="lider_joint" type="fixed">
        <origin xyz="0.45 0.0 0.17" rpy="0 0 0" />
        <parent link="chassis_link" />
        <child link="lider_link" />
        <axis xyz="0 0 0" />
    </joint>


</robot>